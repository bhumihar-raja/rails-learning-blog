{
    "standardRuby.mode": "enableUnconditionally",
    "ruby.format": false,
    "[ruby]": { // or [erb] / [gemfile]
        "editor.formatOnSave": true
    },
    "[erb]": {
        "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
        "editor.formatOnSave": true
    },
    "files.associations": {
        "*.html.erb": "erb"
    }

}